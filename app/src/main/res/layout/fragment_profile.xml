<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- 스크롤 전체 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 상단 바: 뒤로 / 위치 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:contentDescription="@string/back"
                    android:src="@drawable/ic_arrow_left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="내 계정"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <!-- 오른쪽 끝에 딱 붙게 (marginEnd=0) -->
                <ImageView
                    android:id="@+id/btnLocation"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/location"
                    android:src="@drawable/ic_location_pin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 프로필 + 세로 구분선 + 수치 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="6dp"
                android:paddingBottom="10dp">

                <!-- 왼쪽: 아바타 + 텍스트들 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imageAvatar"
                        android:layout_width="135dp"
                        android:layout_height="123dp"
                        android:contentDescription="@string/profile_image"
                        android:src="@drawable/ic_profile_red" />

                    <TextView
                        android:id="@+id/textNickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="닉네임"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/textBio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="소개"
                        android:textSize="12sp"
                        android:lineSpacingExtra="2dp"
                        tools:maxLines="3" />

                    <TextView
                        android:id="@+id/textSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="설정 및 활동"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#D8D8D8"/>
                    <View
                        android:id="@+id/viewSettingsLine"
                        android:layout_width="48dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#D8D8D8"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFollow"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="96dp"
                        android:text="팔로우"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@null"
                        android:background="@drawable/btn_basic"
                        app:cornerRadius="24dp"
                        app:rippleColor="@android:color/transparent"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"/>


                </LinearLayout>

                <!-- 가운데 세로 구분선 -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#000000" />

                <!-- 오른쪽: Post / Following / Followers -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Post -->

                    <!-- Following -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"

                        android:orientation="vertical"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/textPostCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Post"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:paddingBottom="12dp">

                        <TextView
                            android:id="@+id/textFollowing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Following"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            />
                    </LinearLayout>

                    <!-- Followers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textFollowers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Followers"
                            android:textColor="@color/black"
                            android:textSize="17sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 탭: 기간별 / 지역별 -->
            <LinearLayout
                android:id="@+id/tabRow"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <!-- 기간별 (활성) -->
                <LinearLayout
                    android:id="@+id/tabPeriod"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textTabPeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기간별"
                        android:textColor="#000000"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/indicatorPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="15dp"
                        android:background="#000000"/>
                </LinearLayout>

                <!-- 지역별 (비활성) -->
                <LinearLayout
                    android:id="@+id/tabRegion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textTabRegion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지역별"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="#E8E8E8"/>

                    <View
                        android:id="@+id/indicatorRegion"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="15dp"
                        android:background="#E8E8E8"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 그리드/리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMyFeeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="4dp"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_my_feed_thumbnail"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
