<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="12dp">

    <!-- 상단 타이틀 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원하는 지역을 선택해보세요 !"
        android:fontFamily="@font/inter_semibold"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 지역 먹방 여행 기록을 추천해 드릴게요.\n(복수선택 가능)"
        android:fontFamily="@font/inter_medium"
        android:textSize="12sp"
        android:textColor="#454545"
        android:layout_marginBottom="12dp"/>

    <!-- 검색창: 돋보기 아이콘 + 클릭 가능 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <EditText
            android:id="@+id/searchRegion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="지역명을 검색하세요."
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="44dp"
            android:background="@drawable/edittext_border" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/search"
            android:padding="6dp"
            android:src="@drawable/ic_loupe_checked"/>
    </FrameLayout>

    <!-- 상단 헤더 바 (시/도 | 시/구/군) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="#FFF3EF"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="시 / 도"
            android:textSize="13sp"
            android:textColor="#6B6B6B"
            android:fontFamily="@font/inter_medium"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E9E9E9"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="시 / 구 / 군"
            android:textSize="13sp"
            android:textColor="#6B6B6B"
            android:fontFamily="@font/inter_medium"/>
    </LinearLayout>

    <!-- 중단: 좌/우 2분할 리스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSido"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E9E9E9"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSigungu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- 하단: 선택 개수(좌) · 초기화(우) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textSelectedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 10"
            android:textSize="10sp"
            android:textColor="#000000"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/resetArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/ic_refresh"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/textReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초기화"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 선택 칩들 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginTop="4dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="6dp"/>
    </HorizontalScrollView>

    <!-- 하단 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="취소"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:stateListAnimator="@null"
            app:elevation="0dp"
            app:cornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray_cc"
            app:backgroundTint="#FFFFFF"
            app:rippleColor="@color/gray_ripple"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComplete"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="선택 완료"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="16dp"
            app:backgroundTint="#C64132"
            app:rippleColor="@color/red_ripple"/>
    </LinearLayout>

</LinearLayout>
