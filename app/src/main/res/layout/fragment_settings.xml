<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 상단 컬러 바 + 타이틀 + 뒤로가기 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="#C64132">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:contentDescription="@string/back"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_arrow_left"
                />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="설정 및 활동"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

        <!-- 검색 박스 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="검색"
                    android:paddingStart="20dp"
                    android:background="@android:color/transparent"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/ic_loupe_checked"
                    android:contentDescription="@string/search" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- 섹션: 내 계정 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="내 계정"
            android:textColor="#80000000"
            android:paddingBottom="10dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- 프로필 편집 -->
        <LinearLayout
            android:id="@+id/rowEditProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile_checked"
                android:contentDescription="@string/profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필 편집"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:paddingStart="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임 / 소개"
                    android:textSize="12sp"
                    android:textColor="#99000000"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 계정 센터 -->
        <LinearLayout
            android:id="@+id/rowAccountCenter"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_safty"
                android:contentDescription="@string/account" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정 센터"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:paddingStart="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호, 개인정보"
                    android:textSize="12sp"
                    android:textColor="#99000000"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:background="#000000" />

        <!-- 섹션: 내 먹플리 사용 방식 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="내 먹플리 사용 방식"
            android:paddingBottom="10dp"
            android:textColor="#80000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- 좋아요 누른 게시물 -->
        <LinearLayout
            android:id="@+id/rowLikedPosts"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_heart_unfilled"
                android:contentDescription="@string/likes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="좋아요 누른 게시물"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 알림 설정 -->
        <LinearLayout
            android:id="@+id/rowNotification"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_bell_unimport"
                android:contentDescription="@string/notification" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="20dp"
                android:text="알림 설정"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotify"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:checked="false"
                android:showText="false"
                android:textOn=""
                android:textOff=""
                app:thumbTint="@color/switch_thumb_tint"
                app:trackTint="@color/switch_track_tint" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:background="#000000" />

        <!-- 섹션: 더 많은 정보 및 지원 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="더 많은 정보 및 지원"
            android:paddingBottom="10dp"
            android:textColor="#80000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- 이용약관 / 개인정보처리방침 -->
        <LinearLayout
            android:id="@+id/rowPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="56dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <!-- 아이콘 -->
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_consent"
                android:contentDescription="@string/policy" />

            <!-- 텍스트 묶음 (세로 배치) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="20dp">

                <!-- 이용약관 / 개인정보처리방침 -->
                <TextView
                    android:id="@+id/tvPolicyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용약관 / 개인정보처리방침"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <!-- 세부 동의 항목 -->
                <TextView
                    android:id="@+id/tvPolicyDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="위치정보 수집 및 이용 동의 / 프로필 정보 추가 수집 동의\n/ 사진 위치·시간 정보 수집 및 이용 동의"
                    android:textColor="#555555"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="24dp"
            android:background="#000000" />

        <!-- 섹션: 로그인 -->


        <TextView
            android:id="@+id/tvAddAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="계정추가"
            android:paddingBottom="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2A9F47" />

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="28dp"
            android:text="로그아웃"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF0000" />

        <!-- 하단바와 겹침 방지 패딩 (필요 시) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
