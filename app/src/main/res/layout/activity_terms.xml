<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <FrameLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="96dp"
        android:background="#C64132"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_left"
            app:tint="@android:color/white"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="이용약관 / 개인정보처리방침"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_semibold"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/listContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1. 먹플리 이용약관 동의 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="먹플리 이용약관 동의"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/inter_semibold"/>

            <ImageView
                android:id="@+id/arrowTermsService"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <!-- 2. 개인정보 수집이용 동의 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="개인정보 수집이용 동의"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/inter_semibold"/>

            <ImageView
                android:id="@+id/arrowPrivacyPolicy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <!-- 3. 위치정보 수집 및 이용 동의 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="위치정보 수집 및 이용 동의"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/inter_semibold"/>

            <ImageView
                android:id="@+id/arrowLocationPolicy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <!-- 4. 프로필 정보 추가 수집 동의 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="프로필 정보 추가 수집 동의"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/inter_semibold"/>

            <ImageView
                android:id="@+id/arrowProfilePolicy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>

        <!-- 5. 사진 위치·시간 정보 수집 및 이용 동의 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사진 위치·시간 정보 수집 및 이용 동의"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/inter_semibold"/>

            <ImageView
                android:id="@+id/arrowPhotoPolicy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow"
                android:contentDescription="@string/app_name"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
