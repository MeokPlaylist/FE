<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 바 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C64132">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="이용약관 동의"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inter_semibold" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:paddingTop="40dp">

            <!-- 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="먹플리 계정\n서비스 약관에 동의해주세요."
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="24dp"/>

            <!-- 모두 동의합니다 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginBottom="24dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbAllAgree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:layout_gravity="center_vertical"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모두 동의합니다."
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="@font/inter_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체동의는 필수 및 선택정보에 대한 동의도 포함되어 있으며,\n개별적으로도 동의를 선택할 수 있습니다. 선택항목에 대한\n동의를 거부하시는 경우에도 서비스는 이용이 가능합니다."
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 구분선 -->

            <!-- 동일 -->

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- 필수 항목 리스트 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbAgePolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:button="@drawable/selector_checkbox"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 만 14세 이상입니다."
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbTermsService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 먹플리 이용약관 동의"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:id="@+id/arrowTermsService"
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbPrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 개인정보 수집이용 동의"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:id="@+id/arrowPrivacyPolicy"
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbLocationPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 위치정보 수집 및 이용 동의"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:id="@+id/arrowLocationPolicy"
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbProfilePolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 프로필 정보 추가 수집 동의"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:id="@+id/arrowProfilePolicy"
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cbPhotoPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/selector_checkbox"
                    android:text=""/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[필수] 사진 위치 및 시간 정보 수집 및 이용 동의"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_medium"/>

                <ImageView
                    android:id="@+id/arrowPhotoPolicy"
                    android:layout_width="7dp"
                    android:layout_height="11dp"
                    android:src="@drawable/ic_arrow"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- 버튼 -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="다음으로"
                android:textColor="#000000"
                android:textSize="13sp"
                android:backgroundTint="#EEEEEE"
                android:fontFamily="@font/inter_semibold"
                android:enabled="false"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
