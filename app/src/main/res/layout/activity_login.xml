<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingStart="45dp"
    android:paddingEnd="45dp"
    android:paddingTop="40dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- 인트로 문구 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맛있는 순간을 저장하는 플레이리스트"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="@font/inter_medium"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="먹플리"
        android:textSize="30sp"
        android:textColor="#C64132"
        android:textStyle="bold"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginTop="2dp" />

    <!-- 로고 이미지 -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_meokplaylist" />

    <!-- 로그인 제목 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_medium" />

    <!-- 아이디 입력 -->
    <EditText
        android:id="@+id/editTextId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_medium"
        android:textColorHint="#626262"
        android:textSize="13sp"
        android:hint="아이디 입력" />

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:inputType="textPassword"
        android:textColorHint="#626262"
        android:textSize="13sp"
        android:hint="비밀번호 입력" />

    <!-- 로그인 유지 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:layout_gravity="start">

        <CheckBox
            android:id="@+id/checkKeepLogin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/checkbox_border"
            android:layout_marginEnd="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인 유지"
            android:textSize="10sp"
            android:textColor="#626262"
            android:fontFamily="@font/inter_medium" />
    </LinearLayout>

    <!-- 로그인 버튼 -->

    <!-- 회원가입 + 비밀번호 찾기 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_basic"
        android:fontFamily="@font/inter_semibold"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:backgroundTint="@null" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="10sp"
            android:textColor="#626262"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFindInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textSize="10sp"
            android:textColor="#626262"
            android:fontFamily="@font/inter_semibold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 구분선 + 간편로그인 텍스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#969696" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  간편로그인  "
            android:textSize="12sp"
            android:textColor="#969696"
            android:fontFamily="@font/inter_semibold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#969696" />
    </LinearLayout>

    <!-- 간편 로그인 버튼 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnGoogle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_google_logo"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/btnKakao"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_kakao_logo" />
    </LinearLayout>
</LinearLayout>
