<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 상단 바 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C64132">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="비밀번호 재설정하기"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inter_semibold" />
    </FrameLayout>

    <!-- 내용 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="40dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 재설정하기"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새로운 비밀번호를 입력해주세요."
                android:textSize="10sp"
                android:textColor="#000000"
                android:fontFamily="@font/inter_medium"
                android:layout_marginBottom="24dp"/>

            <!-- 비밀번호 입력 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textSize="13sp"
                    android:paddingBottom="12dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:paddingBottom="12dp"
                    android:textSize="13sp"
                    android:textColor="#DF4A4A"
                    android:fontFamily="@font/inter_semibold" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="비밀번호를 입력하세요."
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:inputType="textPassword"
                android:fontFamily="@font/inter_medium"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/pwErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:textColor="#DF4A4A"
                android:fontFamily="@font/inter_medium"
                android:layout_marginBottom="8dp" />


            <!-- 비밀번호 재입력 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호 재확인"
                    android:paddingTop="30dp"
                    android:paddingBottom="12dp"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="13sp"
                    android:textColor="#DF4A4A"
                    android:fontFamily="@font/inter_semibold" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="비밀번호를 재입력하세요."
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:inputType="textPassword"
                android:fontFamily="@font/inter_medium"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/confirmPwErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="10sp"
                android:textColor="#DF4A4A"
                android:fontFamily="@font/inter_medium"
                android:layout_marginBottom="32dp"/>

            <!-- 재설정하기 버튼 -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPassword"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="재설정하기"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="50dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_basic" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
