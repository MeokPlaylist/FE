<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ✅ 상단 고정 바 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#C64132">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="비밀번호"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inter_semibold" />
    </FrameLayout>

    <!-- ✅ 입력 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="40dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- 타이틀 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록된 이메일로 찾기"
                android:textSize="15sp"
                android:textColor="#000000"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="32dp" />

            <!-- 설명 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입 당시 입력한 이메일을 통해 새비밀번호를 등록해주세요."
                android:textSize="12sp"
                android:textColor="#000000"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="24dp" />



            <!-- 이름 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="13sp"
                    android:textColor="#DF4A4A"
                    android:fontFamily="@font/inter_semibold" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="이름을 입력하세요"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:inputType="textPersonName"
                android:fontFamily="@font/inter_medium"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            <!-- 이메일 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이메일"
                    android:paddingTop="10sp"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/inter_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="13sp"
                    android:textColor="#DF4A4A"
                    android:fontFamily="@font/inter_semibold" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="가입한 이메일을 입력하세요."
                android:textSize="10sp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />
            <!-- 생년월일 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:text="생년월일"
                android:textSize="13sp"
                android:textColor="#000000"
                android:fontFamily="@font/inter_semibold" />

            <EditText
                android:id="@+id/editTextBirth"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="ex. 2025-10-10"
                android:textSize="10sp"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:inputType="date"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="32dp" />

            <!-- 다음 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="다음"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="25dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                app:backgroundTint="@null"
                android:background="@drawable/btn_basic" />

            <!-- 에러 메시지 -->
            <TextView
                android:id="@+id/textViewError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미 삭제되었거나 없는 계정입니다"
                android:textSize="12sp"
                android:textColor="#DA1E28"
                android:fontFamily="@font/inter_semibold"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
