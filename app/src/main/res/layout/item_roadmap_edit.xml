<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:paddingTop="8dp"
    android:padding="10dp"
    android:paddingBottom="8dp">

    <!-- 체크박스 -->
    <ImageView
        android:id="@+id/ivCheck"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_checkbox_unchecked"
        android:contentDescription="선택"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

    <!-- 왼쪽 이미지 -->
    <FrameLayout
        android:id="@+id/photo_container"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ivCheck"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="44dp"
            app:cardElevation="2dp"
            app:strokeColor="#1A000000"
            app:strokeWidth="1dp">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher_foreground"/>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <!-- 오른쪽 카드 -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/photo_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/photo_container"
        app:layout_constraintBottom_toBottomOf="@id/photo_container">

        <!-- 카드 본체 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            app:cardBackgroundColor="@android:color/white"
            app:strokeColor="#40000000"
            app:strokeWidth="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvPlaceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    tools:text="맥도날드"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    tools:text="경기도 수원시 영통구 아주로 46"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ⭐ 카드 우상단 별 -->
        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_unchecked"
            android:layout_gravity="top|end"
            android:translationY="-8.8dp"
            android:translationX="-5dp"
            android:contentDescription="즐겨찾기"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
