<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <!-- 상단 여백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 앱 설명 및 로고 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맛있는 순간을 저장하는 플레이리스트"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="먹플리"
        android:textColor="#D32F2F"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="24dp"
        android:contentDescription="앱 로고" />

    <!-- 로그인 섹션 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"/>

    <!-- 아이디 입력란 -->
    <EditText
        android:id="@+id/editTextId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="아이디를 입력하세요."
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:inputType="text"/>

    <!-- 비밀번호 입력란 -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="비밀번호를 입력하세요."
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"/>

    <!-- 로그인 유지 체크박스 -->
    <CheckBox
        android:id="@+id/checkBoxKeepLoggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 유지"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:button="@drawable/custom_checkbox"
        android:paddingLeft="8dp"/>

    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="로그인"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

    <!-- 회원가입 및 비밀번호 찾기 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textViewSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#333333"/>

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textViewFindPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:textColor="#333333"/>
    </LinearLayout>

    <!-- 간편로그인 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textViewEasyLogin"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/textViewEasyLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="간편로그인"
            android:layout_centerHorizontal="true"
            android:textColor="#666666"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textViewEasyLogin"
            android:layout_marginLeft="16dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/buttonKakaoLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_kakao"
            android:background="@drawable/social_button_background_yellow"
            android:contentDescription="카카오 로그인"
            android:layout_marginRight="16dp"/>

        <ImageButton
            android:id="@+id/buttonGoogleLogin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_google"
            android:background="@drawable/social_button_background_white"
            android:contentDescription="구글 로그인"/>
    </LinearLayout>

    <!-- 하단 여백 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5" />

</LinearLayout>