<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원하는 지역을 선택해보세요 !"
        android:fontFamily="@font/inter_semibold"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 지역 먹방 여행 기록을 추천해 드릴게요. (복수선택 가능)"
        android:fontFamily="@font/inter_medium"
        android:textSize="12sp"
        android:textColor="#454545"
        android:layout_marginBottom="16dp"/>

    <!-- 검색창 (시/군/구 필터용) -->
    <EditText
        android:id="@+id/searchRegion"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="지역명을 검색하세요."
        android:fontFamily="@font/inter_medium"
        android:padding="8dp"
        android:background="@drawable/edittext_border"
        android:textSize="14sp"/>

    <!-- 시/도 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시 / 도"
        android:fontFamily="@font/inter_medium"
        android:textSize="13sp"
        android:textColor="#454545"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:nestedScrollingEnabled="false"/>

    <!-- 시/군/구 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시 / 구 / 군"
        android:fontFamily="@font/inter_medium"
        android:textSize="13sp"
        android:textColor="#454545"
        android:layout_marginTop="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSigungu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"/>

    <!-- 선택 뱃지 영역 + 카운터 / 초기화 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/textSelectedCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 10"
            android:textSize="10sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="초기화"
            android:textSize="10sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:fillViewport="false">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:selectionRequired="false"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="6dp" />
    </HorizontalScrollView>

    <!-- 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel_border"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/btn_primary_bg"
            android:text="선택 완료"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
