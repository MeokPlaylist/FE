<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 모서리를 둥글게 처리 -->
    <corners android:radius="50dp" />

    <!-- 반투명한 검정색 배경 -->
    <solid android:color="#FFFFFF" />

    <!-- 내부 패딩 (텍스트 여백) -->
    <padding
        android:left="6dp"
        android:top="2dp"
        android:right="6dp"
        android:bottom="2dp" />
    <stroke
        android:width="1dp"
        android:color="#000000" />
</shape>
