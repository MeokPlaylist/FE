<resources>
    <style name="NoActiveIndicator">
        <item name="android:color">@android:color/transparent</item>

    </style>
    <style name="App.MdcAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog"/>

    <style name="ActionRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EEEEEE</item>
    </style>
    <style name="AppShape" parent="ShapeAppearance.Material3.Corner.Medium">
        <!-- 필요하다면 각 모서리 라운드 값 지정 -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <!-- 선택 커스텀 예시 -->
    <style name="AppShape.RoundTop20">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.App" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.Circle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>